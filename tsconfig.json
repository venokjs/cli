{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "types": ["node", "jest"],
    "declaration": true,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true
  },
  "include": ["actions", "bin", "commands", "src"],
  "exclude": ["node_modules", "e2e"]
}
