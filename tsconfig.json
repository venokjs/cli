{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": "./",
    "types": ["node", "jest"],
    "declaration": true,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "paths": {
      "commands/*": ["commands/*"],
      "actions/*": ["actions/*"],
      "compiler/*": ["src/compiler/*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["actions", "bin", "commands", "src"],
  "exclude": ["node_modules", "e2e"]
}
